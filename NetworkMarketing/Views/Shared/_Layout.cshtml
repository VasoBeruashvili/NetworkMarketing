<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/libs/angular.min.js"></script>
    <script src="~/Scripts/libs/ui-bootstrap-tpls-2.5.0.min.js"></script>
    <script src="~/Scripts/libs/moment.min.js"></script>
    <script src="~/Scripts/app/custom-functions.js"></script>
    <script src="~/Scripts/app/main.js"></script>
</head>
<body ng-app="main-app" ng-controller="main-controller">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Network Marketing", "Index", "Distributors", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="@Html.IsSelected("Distributors", "Index", "active")">@Html.ActionLink("დისტრიბუტორები", "Index", "Distributors")</li>
                    <li class="@Html.IsSelected("Products", "Index", "active")">@Html.ActionLink("პროდუქცია", "Index", "Products")</li>
                    <li class="@Html.IsSelected("ProductFlows", "Index", "active")">@Html.ActionLink("გაყიდვები", "Index", "ProductFlows")</li>
                    <li class="@Html.IsSelected("Bonuses", "Index", "active")">@Html.ActionLink("ბონუსები", "Index", "Bonuses")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Network Marketing</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
